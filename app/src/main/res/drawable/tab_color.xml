<!-- tab_indicator.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryColor" /> <!-- Set the desired color for selected tabs -->
            <corners android:radius="20dp" /> <!-- Set the desired radius for rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/textColor" /> <!-- Set the desired color for unselected tabs -->
            <corners android:radius="20dp" /> <!-- Set the desired radius for rounded corners -->
        </shape>
    </item>
</selector>
